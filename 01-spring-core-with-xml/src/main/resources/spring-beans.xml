<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="bean-overview.xml"/>
    <import resource="bean-scope-lifecycle.xml"/>

    <bean id="igx" class="com.spring.bean.ItemGroup">
        <property name="id" value="123"></property>
        <property name="name" value="Item Group X"></property>
    </bean>

    <!-- Create bean via empty constructor and setter methods -->
    <bean id="itemA" class="com.spring.bean.Item">
        <!-- name in property is the name of the setter method in the class-->
        <property name="id" value="11"></property>
        <property name="name" value="Item 11"></property>

        <!-- List<String> -->
        <property name="providers">
            <list>
                <value>P1</value>
                <value>P2</value>
                <value>P3</value>
            </list>
        </property>
        <!--case 1-->
        <!--        <property name="itemGroup">-->
        <!--            <ref bean="igx"/>-->
        <!--        </property>-->

        <!--case 2-->
        <!--        <property name="itemGroup">-->
        <!--            <bean class="com.spring.bean.ItemGroup">-->
        <!--                <property name="id" value="1234"></property>-->
        <!--                <property name="name" value="Item Group Y"></property>-->
        <!--            </bean>-->
        <!--        </property>-->

        <!--case 3-->
        <property name="itemGroup" ref="igx"></property>
    </bean>

    <!-- Create bean via empty constructor-->
    <bean id="itemB" class="com.spring.bean.Item">
    </bean>

    <!-- Create bean via constructor with arguments -->
    <bean id="itemC" class="com.spring.bean.Item">
        <constructor-arg name="id" value="12"></constructor-arg>
        <constructor-arg name="name" value="Item 12"></constructor-arg>
    </bean>

</beans>
